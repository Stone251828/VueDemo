
@{
    ViewData["Title"] = "Index";
}

<div id="root">
    <div v-on:click="handleClick">{{msg}}</div>
    
</div>
@section Scripts{ 
    <script src="~/lib/vue/vue.js"></script>
    <script>
         new Vue({
             el: "#root",
             data: {
                 msg:"你好！Vue"
             },
             methods: {
                 handleClick: function () {
                     this.msg="hello! Vue"
                 }
             }
         })
    </script>
   
}

